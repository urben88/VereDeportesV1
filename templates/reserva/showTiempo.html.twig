{% extends 'base.html.twig' %}

{% block title %}Ver Tiempo{% endblock %}

{% block styles %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/formularios/reserva/form.css') }}">

{% endblock %}
 
{% block header %}
   {{ include("componentes/nav.html.twig") }}
{% endblock %}


{% block body %}
<div class="container">
  <h1 class="text-center mt-3">El tiempo</h1>   
  <div class="card mb-3 d-flex justify-content-lg-center align-items-center">
    <img class="card-img-top" src="{{ imagen }}" alt="Card image cap" style="width: 200px">
    <div class="card-body w-100 d-flex justify-content-center flex-column align-items-center">
      <h5 class="card-title h4">Del dia  <span class="text-primary">{{ diareserva }}</span></h5>
      <p class="card-text">Temperatura media: <span class="text-success fw-bold">{{ data.temp }}C<span></p>
      <p class="card-text">Temperatura mas baja: <span class="text-primary fw-bold me-4">{{ data.low_temp }}C</span>Temperatura mas alta: <span class="text-danger fw-bold">{{ data.max_temp }}C<span></p>
      <p class="card-text">Velocidad del viento: <span class="text-secondary fw-bold">{{ data.wind_spd }} Km/h</span></p>      
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
  </div>

  {% if data == null %}
  <p> No se ha encontrado el tiempo, puede que la api no ofrezca este dia</p>
  {% endif %}

</div>

{% endblock %}

{% block scripts %}
 <!-- <script src="{{ asset('js/user/solicitarEquipo.js') }}" type="text/javascript"></script> -->
{% endblock %}