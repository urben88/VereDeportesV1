<style>
.nombre:hover{
    color:blue;
}
</style>

<table class="table table-dark">
    <tr>
        <th>Nombre</th>
        <th>Deporte</th>
        <th>Capitan</th>
        <th>Id</th>
    </tr>
    {% for equipo in equipos %}
     
    <tr>
        <td class="nombre" onclick="ir(event)" value="{{equipo.id}}" style="cursor:pointer">{{ equipo.nombre }}</td>
        <td>{{ equipo.deporte | upper }}</td>
        <td>
        {% for jugador in equipo.jugadores  %}
            {% if jugador.capitan == true %}
             {{ jugador.nombre }}
            {% endif %}
        {% endfor %} 
        </td>
        <td>{{ equipo.id }}</td>
    </tr>
    {% endfor %}
</table>

<script>

function ir(e){
    console.log('yee')
    let id = e.target.getAttribute('value');
    window.location.href = "http://127.0.0.1:8000/equipo/showEquipo/"+id;

}

</script>
